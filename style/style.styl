// z-indicies of elements
z-water-bg = 68
z-water-fg = 91
z-splash = 87
z-beach-bg = 88
z-beach-fg = 89
z-logo = 70
z-plane = 85
z-beachball = 90
z-cloud = 80
z-ui = 100

vendor(prop, args)
  -webkit-{prop} args
  -moz-{prop} args
  -o-{prop} args
  -ms-{prop} args
  {prop} args

animation()
  vendor('animation', arguments)

border-radius()
  vendor('border-radius', arguments)
  
background-linear-gradient(startPoint, startColor, startInterval, endColor, endInterval, deprecatedWebkitStartPoint = false, deprecatedWebkitEndPoint = false)
  background-color startColor
  if deprecatedWebkitStartPoint && deprecatedWebkitEndPoint
    background-image -webkit-gradient(linear, deprecatedWebkitStartPoint, deprecatedWebkitEndPoint, color-stop(startInterval, startColor), color-stop(endInterval, endColor))
  background-image -webkit-linear-gradient(startPoint, startColor startInterval, endColor endInterval)
  background-image -moz-linear-gradient(startPoint, startColor startInterval, endColor endInterval)
  background-image -ms-linear-gradient(startPoint, startColor startInterval, endColor endInterval)
  background-image -o-linear-gradient(startPoint, startColor startInterval, endColor endInterval)
  background-image linear-gradient(startPoint, startColor startInterval, endColor endInterval)

@keyframes water-bob
 0%
   bottom: 0px 
 50%
   bottom: -18px 
 100%
   bottom: 0px     

// Prevent native styling of widgets
button, input[type="button"], input[type="reset"], input[type="submit"]
  cursor: pointer  
  -webkit-appearance: button
  *overflow: visible

body
  padding: 0px
  margin: 0px
  font-family: 'Wellfleet'

.ui
  font-family: 'Wellfleet'
  font-size: 28pt
  border: 0px solid #FFF
  color: rgb(22,217,235)
  background-color: #006699
  padding: 20px
  display: block-inline
  position: fixed
  z-index: z-ui
  
// Buttons easily accessible by thumb
#thumb-button-left
  position: fixed
  bottom: 80%
  left: 0px
  border-radius: 0 5px 5px 0;   

#thumb-button-right
  position: fixed
  bottom: 80%
  right: 0px
  border-radius: 5px 0 0 5px

header
  font-size: 14pt
  color: white
  position: fixed
  width:100%
  text-align:center
  padding: 0px
  margin:0px

#counter
  padding: 0px
  margin: 0px

#beachball
  position: fixed
  left: 100px
  top: 100px
  width: 225px
  height: 225px
  z-index: z-beachball

#splash
  position: fixed
  width: 271px
  height: 92px
  z-index: z-splash

#beach-fg
  position: fixed
  bottom: -250px
  left: 0px
  width: 70%
  height: 400px
  border-radius: 150px
  background: #ead175
  background-linear-gradient(top, #ead175, 0%, #bd8633, 50%)
  z-index: z-beach-fg

#beach-bg
  position: fixed
  bottom: -250px
  left: 0px
  width: 80%
  height: 400px
  border-radius: 200px
  background: #bd8633
  background-linear-gradient(top, #bd8633, 0%, #82521f, 50%)
  z-index: z-beach-bg

#logo
  position: fixed
  width: 100%
  height: 100%
  background-image: url('../images/logo.png')
  background-position: center 80px
  background-repeat: no-repeat
  z-index: z-logo

#water-fg
  position: fixed
  bottom: 0px
  left: 0px
  width: 100%
  height: 36px	   
  background-image: url('../images/water1.png')
  background-repeat: repeat-x
  animation: water-bob 4s ease-in-out infinite
  z-index: z-water-fg  

#water-bg 
  position: fixed
  bottom: 0px
  left: 0px
  width: 100%
  height: 72px	   
  background-image: url('../images/water2.png')
  background-repeat: repeat-x
  animation: water-bob 8s ease-in-out infinite
  z-index: z-water-bg

#sky
  position:fixed
  width:100%
  height:100%
  background: none  
  background-linear-gradient(bottom, rgb(22,217,235), 44%, rgb(20,169,250), 72%)

.cloud
  position: fixed
  z-index: z-cloud

.plane
  position: fixed
  z-index: z-plane

.hidden  
  display: none
